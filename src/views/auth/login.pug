extends ../layout/index 
block content 
    div.py-10 
        h1.text-center.text-4xl.my-10.font-extrabold.text-violet-800 Real 
            span.font-normal.text-black  State 
        h2.text-center.text-3xl.font-extrabold= page 

        .mt-8.mx-auto.max-w-xl
            .bg-white.py-8.px-4.shadow-x1.rounded-1g
                form.space-y-5(action="")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for= "email") Name: 
                        input#email.w-full.px-3.py-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="user@domain.com" name="email")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for= "password") Password:
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="*******" name="password"  type="password") 
                     
                    input#btn-login.w-full.bg-indigo-600.text-white(class="text-gray-800 font-bold py-3 cursor-pointer bg-blue-200 rounded-xl hover:bg-red-400 hover:text-white" type="submit" value="Login")

                    div.flex.items-center.justify-between.pt-5
                        a.text-sm.text-gray-800(href="/login/register" class="hover:underline decoration-4 decoration-sky-600 ") If you don't have an account, Register.
                        a.text-sm.text-gray-800(href="/login/password-recovery" class="hover:underline decoration-4 decoration-sky-600 ") Forgot your password?, Recover it.
        