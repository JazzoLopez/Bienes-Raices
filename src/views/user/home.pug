extends ../layout/index 
block content 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Real 
            span.font-normal State
        h2.text-center.text-2xl.font-extrabold My properties
    a(href="/properties/create" class="rounded py-2 px-10 bg-cyan-500 hover:bg-cyan-600 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto") Publish new property

    if myProperties.length
        div(class="bg-white shwadow rounded-lg")
            div(class="divide-y divide-gray-200")
                each property in myProperties 
                    li  
                        div(class="p-6 w-full flex-col flex sm:flex-row sm:items-center sm:justify-between space-y-8 gap4")
                            div(class="sm:w-1/4 md:w-1/6")
                            div(class="sm:w-2/4 md:w-3/6 lg:w-4/6")
                            div(class="sm:w-1/4 md:w-2/6 lg-w-1/6")
    else    
        p.text-center nothing properties